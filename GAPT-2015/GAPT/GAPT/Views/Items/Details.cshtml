@model GAPT.Models.Item

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Item</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Type.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Brand)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Brand)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ColorHex)
        </dt>

        <dd style="background-color: @Model.ColorHex; width: 100px; ">
            @Html.DisplayFor(model => model.ColorHex)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ItemUrl)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemUrl)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>

        <dd>
            <!--@Html.DisplayFor(model => model.ImageUrl)-->
            @if(!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Url.Content(Model.ImageUrl)" style="display: inline; max-width:100px; max-height:100px; width: auto; height: auto;" />
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Add To Cart", "AddProduct", "ShoppingCart", new { id = Model.Id, type = "Item" }, new { @class = "btn btn-default" }) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p> 